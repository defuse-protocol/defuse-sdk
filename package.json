{
  "name": "defuse-sdk",
  "version": "0.0.1",
  "repository": "https://github.com/defuse-protocol/defuse-sdk",
  "author": "Defuse Protocol",
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "next lint",
    "eslint": "eslint --ext .tsx --ext .ts ./ --fix",
    "format": "prettier --write ./",
    "prepare": "husky"
  },
  "dependencies": {
    "@ref-finance/ref-sdk": "^1.3.8",
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "yarn run eslint",
      "yarn run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
